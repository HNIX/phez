<div class="row">
  <div class="col-md-1 voting_arrows">
    <a href="javascript:Phez.upvote(<%= @post.id %>)"><i class="vote-arrow fa fa-arrow-up post-upvote-<%= @post.id %> <%= 'voted' if @upvoted %>"></i></a> <br/>
    <a href="javascript:Phez.downvote(<%= @post.id %>)"><i class="vote-arrow fa fa-arrow-down post-downvote-<%= @post.id %> <%= 'voted' if @downvoted %>"></a></i>
  </div>
  <div class="col-md-6">
    <h2>
      <% if @post.is_self %>
        <%= @post.title %>
      <% else %>
        <%= link_to @post.title, @post.url %>
      <% end %>
    </h2>
  </div>
</div>

<% if @post.is_self %>
  <div class="well"><%= raw(@post.body_rendered) %></div>
<% end %>

<br/>

<% if @comments.empty? %>
  <%= form_for @comment, url: comments_path do |f| %>
    <%= hidden_field_tag :post_id, @post.id %>
    <%= f.text_area :body, class: 'comment-body' %> <br/>
    <%= f.submit "Post Comment" %>
  <% end %>
<% else %>
  <% @comments.each do |comment| %>
    <% @comment = comment %>
    <%= render :partial => 'comment' %> 
  <% end %>

<% end %>

<div style="display: none;" id="comment-form">
  <% @comment = Comment.new %>
  <div class="inner-comment-form">
    <%= form_for @comment, url: comments_path do |f| %>
      <%= hidden_field_tag :post_id, @post.id %>
      <%= hidden_field_tag :parent_id, '' %>
      <%= f.text_area :body, class: 'comment-body' %> <br/>
      <%= f.submit "Post Comment" %>
    <% end %>
    <br/>
  </div>
</div>

<% content_for :sidebar do %>
  <%= render :partial => 'sidebar' %>
<% end %>
